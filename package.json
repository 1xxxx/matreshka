{
  "name": "matreshka",
  "private": true,
  "version": "0.0.0-auto",
  "description": "Matreshka.js framework",
  "main": "matreshka.js",
  "scripts": {
    "test": "npm run node-test",
    "node-test": "babel-node test/node-test/jasmine.js",
    "node-cover": "babel-node ./node_modules/istanbul/lib/cli cover test/jasmine.js --report html",
    "develop": "karma start test/karma.conf.js",
    "karma-test": "CHROME_BIN=chromium-browser karma start test/karma-test/karma.conf.js --single-run --no-auto-watch",
    "karma-libraries-test": "npm run karma-test && npm run karma-test -- --dom-library=jquery-1 && npm run karma-test -- --dom-library=jquery-2 && npm run karma-test -- --dom-library=jquery-3 && npm run karma-test -- --dom-library=zepto",
    "watch-browser-test": "webpack --config test/webpack-test.config.js --watch",
    "lint": "eslint .",
    "check-updates": "ncu",
    "upgrade": "npm run check-updates -- --upgradeAll && npm install",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm run deploy && semantic-release post",
    "deploy": "npm run npm-deploy && npm run bundle-deploy",
    "npm-deploy-clean": "shx rm -rf npm",
    "npm-deploy-setup": "echo '//registry.npmjs.org/:_authToken=${NPM_TOKEN}' >> npm/.npmrc",
    "npm-compile": "babel src -d npm && shx cp README.md npm/README.md && babel-node ./tools/generate-package",
    "npm-publish": "cd npm && npm publish && cd ..",
    "npm-deploy": "npm run npm-deploy-clean && npm run npm-compile && npm run npm-deploy-setup && npm run npm-publish",
    "bundle": "babel-node ./tools/generate-package && webpack",
    "bundle-browser-test": "webpack --config test/webpack-test.config.js",
    "bundle-deploy-clean": "shx rm -rf bundle",
    "bundle-deploy-setup": "git config --global user.email 'andrey.a.gubanov@gmail.com' && git config --global user.name 'Andrey Gubanov (his digital copy)'",
    "bundle-pull-repo": "npm run bundle-deploy-clean && npm run bundle-deploy-setup && git clone https://$GH_TOKEN@github.com/matreshkajs/bundle.git",
    "bundle-push-repo": "cd bundle && git add --all && (git commit -am 'Publishing the bundle' && git push https://$GH_TOKEN@github.com/matreshkajs/bundle.git master || 0) && cd ..",
    "bundle-deploy": "npm run bundle-pull-repo && npm run bundle && npm run bundle-browser-test && npm run bundle-push-repo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matreshkajs/matreshka.git"
  },
  "author": {
    "name": "Andrey Gubanov",
    "email": "andrey.a.gubanov@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matreshkajs/matreshka/issues"
  },
  "config": {
    "commitizen": {
      "path": "./tools/cz-simple-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "release": {
    "branch": "next",
    "analyzeCommits": "./tools/commit-analyzer"
  },
  "publishConfig": {
    "tag": "next"
  },
  "homepage": "https://github.com/matreshkajs/matreshka#readme",
  "devDependencies": {
    "app-module-path": "^1.1.0",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-istanbul-loader": "^0.1.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-check-es2015-constants": "^6.8.0",
    "babel-plugin-nofn": "0.0.3",
    "babel-plugin-transform-es2015-arrow-functions": "^6.8.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.10.1",
    "babel-plugin-transform-es2015-classes": "^6.9.0",
    "babel-plugin-transform-es2015-computed-properties": "^6.8.0",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-es2015-for-of": "^6.8.0",
    "babel-plugin-transform-es2015-modules-simple-commonjs": "^0.3.0",
    "babel-plugin-transform-es2015-parameters": "^6.11.4",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.8.0",
    "babel-plugin-transform-es2015-template-literals": "^6.8.0",
    "babel-plugin-transform-object-spread-inline": "0.0.2",
    "babel-polyfill": "^6.13.0",
    "commitizen": "^2.8.6",
    "copy-webpack-plugin": "^3.0.1",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-output-todo-comments": "0.0.6",
    "eslint-plugin-react": "^6.1.2",
    "ghooks": "^1.3.2",
    "if-env": "^1.0.0",
    "install": "^0.8.1",
    "istanbul": "^1.1.0-alpha.1",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "jsdom": "^9.4.2",
    "karma": "^1.2.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-commonjs": "1.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "karma-webpack-with-fast-source-maps": "^1.10.0",
    "npm-check-updates": "^2.8.0",
    "optimist": "^0.6.1",
    "semantic-release": "^4.3.5",
    "shx": "^0.1.4",
    "unminified-webpack-plugin": "^1.1.0",
    "validate-commit-msg": "^2.8.0",
    "webpack": "^1.13.2"
  }
}
